<section class="contact" id="contact">
    <div class="contact-section">
        <h4>Contact</h4>
        <p>If you want to contact me, I suggest you write to me on any of my platforms.</p>
        
        <%= form_with(url: contact_path, method: :post, class: "mt-4") do |f| %>
            <div class="mb-3">
                <%= f.label :name, "Name", class: "form-label" %>
                <%= f.text_field :name, class: "form-control", required: true %>
            </div>
            
            <div class="mb-3">
                <%= f.label :email, "Email", class: "form-label" %>
                <%= f.email_field :email, class: "form-control", required: true %>
            </div>
            
            <div class="mb-3">
                <%= f.label :message, "Message", class: "form-label" %>
                <%= f.text_area :message, class: "form-control", rows: 5, required: true %>
            </div>
            
            <%= f.submit "Send Message", class: "btn btn-primary" %>
        <% end %>
    </div>
</section> 